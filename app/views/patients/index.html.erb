<h1 class="text-center text-6xl m-40">Patients Record List</h1>


<div class="container flex justify-center mx-auto">
    <div class="flex flex-col">
        <div class="w-full">
            <div class="border-b border-gray-200 shadow">
                <table class="divide-y divide-gray-300 ">
                    <thead class="bg-gray-50">
                        <tr>

                            <th class="px-6 py-2 text-xs text-gray-500">
                                Name
                            </th>
                            <th class="px-6 py-2 text-xs text-gray-500">
                                Date of Consultation
                            </th>

                            <th class="px-6 py-2 text-xs text-gray-500"> 
                            </th>
                            <th class="px-6 py-2 text-xs text-gray-500">
                                Actions
                            </th>
                            <th class="px-6 py-2 text-xs text-gray-500">
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-300">
                        <tr class="whitespace-nowrap">
						<% @patients.each do |patient| %>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900">
                                    <%= patient.name %>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-500"><%= patient.date %></div>
                            </td>
                            <td class="px-6 py-4">
                                <button class="px-4 py-1 text-sm text-white bg-blue-400 hover:bg-blue-800 rounded-full"><%= link_to "View", patient %></button>
                            </td>
                            <td class="px-6 py-4">
                                <button class="px-4 py-1 text-sm text-white bg-blue-400 hover:bg-blue-800 rounded-full"><%= link_to "Edit", edit_patient_path(patient)%></button>
                            </td>
                            <td class="px-6 py-4">
                                <button class="px-4 py-1 text-sm text-white bg-red-500 hover:bg-red-800 rounded-full"><%= link_to "Delete", patient, method: :delete%></button> 
                            </td>
						
                        </tr>
                    <% end %>
                    </tbody>
                </table>


            </div>
        </div>
                        <button type="button" class="text-white-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-3 mb-3 w-full"><%= link_to "Add patient", new_patient_path %></button>
    </div>
</div>
	
